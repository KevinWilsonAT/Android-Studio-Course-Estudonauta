<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/tvwNameId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:text="@string/name"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="HardcodedText" />

  <EditText
      android:id="@+id/ptEditNameId"
      android:layout_width="208dp"
      android:layout_height="50dp"
      android:layout_marginStart="16dp"
      android:ems="10"
      android:hint="@string/placeholder"
      android:inputType="text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvwNameId"
      tools:ignore="Autofill,LabelFor" />

  <Button
      android:id="@+id/btnGoId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="pressed"
      android:text="@string/button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ptEditNameId"
      tools:ignore="HardcodedText" />

  <TextView
      android:id="@+id/tvwResponseNameId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:text="@string/response"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnGoId"
      tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>